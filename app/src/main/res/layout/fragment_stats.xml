<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.baliofvfx.phonestatus.StatsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/androidVersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="139dp"
        android:text="Android Version:" />

    <TextView
        android:id="@+id/systemUpTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/androidVersionTextView"
        android:layout_alignStart="@+id/androidVersionTextView"
        android:layout_below="@+id/androidVersionTextView"
        android:layout_marginTop="21dp"
        android:text="System uptime:" />

    <TextView
        android:id="@+id/WiFiTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/systemUpTimeTextView"
        android:layout_alignStart="@+id/systemUpTimeTextView"
        android:layout_below="@+id/systemUpTimeTextView"
        android:layout_marginTop="23dp"
        android:text="WiFi:" />

    <TextView
        android:id="@+id/netwrokTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/WiFiTextViewID"
        android:layout_alignStart="@+id/WiFiTextViewID"
        android:layout_below="@+id/WiFiTextViewID"
        android:layout_marginTop="21dp"
        android:text="Netwrok:" />

    <TextView
        android:id="@+id/mobileDataTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/networkTypeTextViewID"
        android:layout_alignStart="@+id/networkTypeTextViewID"
        android:layout_below="@+id/networkTypeTextViewID"
        android:layout_marginTop="19dp"
        android:text="Mobile Data:" />

</RelativeLayout>
